#include <stdio.h>
void swap(int* a, int* b)
{
int temp = *a;
*a = *b;
*b = temp;
}
void heap(int arr[], int s, int i)
{

int largest = i;

int left = 2 * i + 1;
int right = 2 * i + 2;

if (left < s && arr[left] > arr[largest])
largest = left;
if (right < s && arr[right] > arr[largest])
largest = right;
if (largest != i) {
swap(&arr[i], &arr[largest]);
heap(arr, s, largest);
}
}

void heapSort(int arr[], int s)
{
int i;
for (i = s / 2 - 1; i >= 0; i--)
heap(arr, s, i);

for (i = s - 1; i >= 0; i--)
{
swap(&arr[0], &arr[i]);

heap(arr, i, 0);
}
}

void printArray(int arr[], int s)
{
	int i;
for (i = 0; i < s; i++)
printf("%d ", arr[i]);
printf("\n");
}

int main()
{
int arr[] = { 12, 11, 13, 5, 6, 7 };
int s = sizeof(arr) / sizeof(arr[0]);

heapSort(arr, s);
printf("Sorted array is\n");
printArray(arr, s);
}
